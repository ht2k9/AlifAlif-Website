<!-- Cart -->
<div id="cart" class="cartsidenav" style="<% if(menu.darkmode == 'true') { %> background-color: #111; color: white; <% } else{ %> background-color: white; color: black; <% } %>">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <ul>
            <% { for(let i = 0; i < cart.length; i++){ %>
                <li> • <%= cart[i] %> </li>
            <% }} %>
        </ul>
    </div>
    <button onclick="openNav()" style="padding: 0; width:50%; float:right; background: <%= menu.colors.primary %>; <% if(id == '1') { %> color: #ffe2ae; <% } %> <%= menu.colors.primary %>; <% if(id != '1') { %> border-color: <%= menu.colors.secondary %> <% } %>" class="btn">
    <span style="margin:0; color:red; font-size: 22pt">&#x2661;</span></button><br/>

    <!--
    <div style="text-align: right; direction:rtl; background-color:white; color:gold;"></div><span style="text-align: right; font-size:20pt;cursor:pointer;" onclick="openNav()">&#9776;
        <% if(lang == 'ar') { %> الطلبات <% } %> <% if(lang == 'he') { %> בקשות <% } %> </span>
    </div>
    -->

    <script>
        function openNav() {
            document.getElementById("cart").style.width = "15rem";
        }
        function closeNav() {
            document.getElementById("cart").style.width = "0";
        }
    </script>